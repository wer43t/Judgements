<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Judgements.AdminLoginPage"
             HideSoftInputOnTapped="True"
             Background="#c2e3c8">

    <VerticalStackLayout>
        <ScrollView>
            <VerticalStackLayout Padding="30,20" Spacing="30">
                <Button
                    Text="Администратор"
                    IsEnabled="False"
                    HorizontalOptions="Fill" />

                <StackLayout>
                    <Label Text="Введите имя:" FontSize="28" />
                    <StackLayout Orientation="Horizontal">
                        <Image Source="pencil_24.png" HorizontalOptions="Center" VerticalOptions="Center" Aspect="AspectFill" />
                        <Entry x:Name="nameEntry" TextColor="Black" StyleClass="bottom-border"  WidthRequest="300"/>
                    </StackLayout>
                </StackLayout>

                <Button
                    Text="Войти ⟶"
                    Clicked="AuthorizeBtn_Clicked"
                    HorizontalOptions="Fill" />
            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>