<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Judgements.JudgementPage"
             Title=""
                          Background="#c2e3c8">

    <VerticalStackLayout>
        <ScrollView>
            <VerticalStackLayout
        Padding="30,20"
        Spacing="30">
                <Button
            x:Name="JudgementsBtn"
            Text="Судья" 
            SemanticProperties.Hint="Counts the number of times you click"
            HorizontalOptions="Fill" 
                    IsEnabled="False"/>

                <StackLayout>
                    <Label Text="Введите имя:" FontSize="28"/>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="pencil_24.png" HorizontalOptions="Center" VerticalOptions="Center" Aspect="AspectFill"/>
                        <Entry x:Name="nameEntry"  TextColor="Black" StyleClass="bottom-border"/>
                    </StackLayout>
                </StackLayout>

                <Button
            x:Name="AuthorizeBtn"
            Text="Войти ⟶"
            Clicked="AuthorizeBtn_Clicked"
            SemanticProperties.Hint="Counts the number of times you click"
            HorizontalOptions="Fill" />

            </VerticalStackLayout>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>